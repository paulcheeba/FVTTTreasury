<form class="ft-settings">
  <div class="ft-section">
    <h3><i class="fas fa-user-gear"></i> Assign Treasurers</h3>
    <p class="hint">GM only. Treasurers can edit; others can view.</p>
    <div class="ft-list">
      {{#each players as |p|}}
        <label class="ft-item">
          <span class="ft-label">{{p.name}}</span>
          <input type="checkbox" name="treasurer" value="{{p.id}}" {{#if p.selected}}checked{{/if}} />
        </label>
      {{/each}}
    </div>
    <button type="button" class="ft-btn" data-action="save-treasurers"><i class="fas fa-save"></i> Save Treasurers</button>
  </div>

  <hr/>

  <div class="ft-section">
    <h3><i class="fas fa-palette"></i> Theme</h3>
    <select name="theme">
      <option value="plain" {{#if (eq theme "plain")}}selected{{/if}}>Plain</option>
      <option value="dnd5e" {{#if (eq theme "dnd5e")}}selected{{/if}}>5E</option>
      <option value="cyberpunk" {{#if (eq theme "cyberpunk")}}selected{{/if}}>Cyberpunk</option>
    </select>
  </div>

  <hr/>

  <div class="ft-section">
    <h3><i class="fas fa-money-bill"></i> Currencies</h3>
    <label>
      Mode:
      <select name="currencyMode">
        <option value="dndpf" {{#if (eq currencyMode "dndpf")}}selected{{/if}}>D&D / Pathfinder (cp, sp, ep, gp, pp)</option>
        <option value="custom" {{#if (eq currencyMode "custom")}}selected{{/if}}>Custom</option>
      </select>
    </label>

    {{#if (eq currencyMode "custom")}}
      <div class="ft-currencies">
        {{#each customRows as |row idx|}}
          <div class="ft-currency-row">
            <input name="key"   type="text" placeholder="key (e.g., gp)"   value="{{row.key}}"   />
            <input name="label" type="text" placeholder="label (Gold)"    value="{{row.label}}" />
            <input name="rate"  type="number" placeholder="rate" step="1" value="{{row.rate}}"  />
          </div>
        {{/each}}
      </div>
      <button type="button" class="ft-btn" data-action="save-currencies"><i class="fas fa-save"></i> Save Custom Currencies</button>
    {{/if}}
  </div>

  <hr/>

  <div class="ft-section">
    <h3><i class="fas fa-file-arrow-up"></i> Import / <i class="fas fa-file-arrow-down"></i> Export</h3>
    <input id="ft-import-file" type="file" accept="application/json" style="display:none;" />
    <button type="button" class="ft-btn" data-action="import-json"><i class="fas fa-file-import"></i> Import JSON</button>
    <button type="button" class="ft-btn" data-action="export-json"><i class="fas fa-file-export"></i> Export JSON</button>
  </div>
</form>
