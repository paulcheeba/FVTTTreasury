<div class="ft-root">
  <nav class="tabs ft-tabs-bar" data-group="main">
    {{#each tabs as |t|}}
      <a class="tab-link {{#if (eq ../activeTab t.id)}}active{{/if}}"
         data-action="tab"
         data-group="main"
         data-tab="{{t.id}}">
        <i class="{{t.icon}}"></i>
        <span>{{t.label}}</span>
      </a>
    {{/each}}
  </nav>

  <section class="ft-tabs" data-group="main">
    <div class="tab {{#if (eq activeTab "group-coin")}}active{{/if}}" data-group="main" data-tab="group-coin">
      <div class="ft-panel"><!-- Group Coin content mounts here --></div>
    </div>

    <div class="tab {{#if (eq activeTab "items-found")}}active{{/if}}" data-group="main" data-tab="items-found">
      <div class="ft-panel"><!-- Items Found content mounts here --></div>
    </div>

    <div class="tab {{#if (eq activeTab "checklist")}}active{{/if}}" data-group="main" data-tab="checklist">
      <div class="ft-panel"><!-- Checklist content mounts here --></div>
    </div>
  </section>
</div>
